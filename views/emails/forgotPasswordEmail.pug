extends baseEmail

block content
    p Hi #{firstName},
    p A request has been received to change the password for your Acai Brasil account.
    p This link will expire in 10 minutes from now.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset Password
    p If you did not initiate this request, please contact us immediately at support@acaibrasil.com                                
    p Thank you, Acai Brasil Team