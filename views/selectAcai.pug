extends base

block content
  main 
    .size
      h3.heading-3
        | Select the size
        span Required
      .card__container
        if item.size == 0
          input#size-1(type='radio' name='size' data-size='0' checked='')
        else
          input#size-1(type='radio' name='size' data-size='0')
        label.card(for='size-1')
          .card__text.card__text-1
            | 12 oz. cup
          .card__text.card__text-2
            | $ 6
        if item.size == 1
          input#size-2(type='radio' name='size' data-size='1' checked='')
        else
          input#size-2(type='radio' name='size' data-size='1')
        label.card(for='size-2')
          .card__text.card__text-1
            | 24 oz. cup
          .card__text.card__text-2
            | $ 11
        if item.size == 2    
          input#size-3(type='radio' name='size' data-size='2' checked='')
        else
          input#size-3(type='radio' name='size' data-size='2')
        label.card(for='size-3')
          .card__text.card__text-1
            | 32 oz. bowl
          .card__text.card__text-2
            | $ 14
        if item.size == 3    
          input#size-4(type='radio' name='size' data-size='3' checked='')
        else
          input#size-4(type='radio' name='size' data-size='3') 
        label.card(for='size-4')
          .card__text.card__text-1
            | 42 oz. bowl
          .card__text.card__text-2
            | $ 18
